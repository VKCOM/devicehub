{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": false,
    "declaration": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["./lib/types/**/*.d.ts", "./lib/**/*.ts"],
  "verbose": true
}
